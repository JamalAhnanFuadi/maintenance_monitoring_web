<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO" name="config">
	<Properties>
		<Property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{1} - %msg%n</Property>
		<Property name="LOG_DIR">${sys:catalina.base}/logs</Property>
	</Properties>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="${PATTERN}" />
		</Console>

		<RollingFile name="rollingFile"
					 fileName="${LOG_DIR}/umx2.log"
					 filePattern="${LOG_DIR}/umx2.%d{dd-MMM}.log.gz"
					 ignoreExceptions="false">
			<PatternLayout>
				<Pattern>${PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval= "1" />
			</Policies>
			<DefaultRolloverStrategy max="31" />
		</RollingFile>

	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="rollingFile" />
		</Root>

		<Logger name="id" level="debug" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="rollingFile" />
		</Logger>

		<Logger name="com" level="debug" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="rollingFile" />
		</Logger>

		<Logger name="com.zaxxer.hikari" level="info" additivity="false">
			<AppenderRef ref="rollingFile" />
		</Logger>

	</Loggers>
</Configuration>